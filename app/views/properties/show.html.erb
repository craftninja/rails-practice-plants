<div class="page-header">
  <div class="pull-right">
    <%= link_to 'Edit', edit_property_path(@property), class: 'btn btn-success' %>
    <%= link_to 'Delete', property_path(@property), method: :delete, class: 'btn btn-danger' %>
  </div>
  <h1><%= @property.name %></h1>
</div>

<h3><%= @property.description %></h3>

<table class="table">
  <thead>
    <th>
      Plant name
    </th>
    <th>
      Genus Species
    </th>
  </thead>
  <tbody>
    <% @property.plants.each do |plant| %>
      <tr>
        <td>
          <%= link_to plant.common_name, plant_path(plant) %>
        </td>
        <td>
          <i><%= plant.genus_species %></i>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
